generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  birthDate     DateTime?
  phoneNumber   String?
  adress        String?
  difficulty    Difficulty    @default(EASY)
  hasRegistered Boolean       @default(false)
  accounts      BankAccount[]
}

model BankAccount {
  id                   String        @id @default(cuid())
  name                 String
  category             String?
  userId               String
  user                 User          @relation(fields: [userId], references: [id])
  balance              Int
  outgoingTransactions Transaction[] @relation("FromAccount")
  ingoingTransactions  Transaction[] @relation("ToAccount")
}

model Transaction {
  id            String      @id @default(cuid())
  fromAccountId String
  fromAccount   BankAccount @relation(fields: [fromAccountId], references: [id], name: "FromAccount")
  toAccountId   String
  toAccount     BankAccount @relation(fields: [toAccountId], references: [id], name: "ToAccount")
  amount        Int
  createdAt     DateTime
}
